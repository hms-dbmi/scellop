{
  "name": "scellop-monorepo",
  "private": true,
  "type": "module",
  "version": "0.2.0",
  "license": "MIT",
  "author": "Thomas Smits",
  "description": "Monorepo for Scellop packages - Scalable visualization for single-cell data",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hms-dbmi/scellop.git"
  },
  "bugs": {
    "url": "https://github.com/hms-dbmi/scellop/issues"
  },
  "scripts": {
    "build": "pnpm -r --filter \"./packages/**\" build",
    "dev": "pnpm -r --parallel --filter \"./packages/**\" --filter @scellop/demo dev",
    "test": "pnpm -r --filter \"./packages/**\" test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "pnpm -r --filter \"./packages/**\" clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "jsdom": "^27.3.0",
    "knip": "^5.75.2",
    "typescript": "^5.8.3"
  }
}
